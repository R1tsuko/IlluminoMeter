<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFirstFragment">

    <fragment
        android:id="@+id/FirstFirstFragment"
        android:name="com.nil_ottoman.illuminometer.FirstFirstFragment"
        android:label="First First"
        tools:layout="@layout/fragment_first_first">
        <action
            android:id="@+id/action_FirstFirstFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_FirstFirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.nil_ottoman.illuminometer.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_FirstFirstFragment"
            app:destination="@id/FirstFirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.nil_ottoman.illuminometer.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_FirstFirstFragment"
            app:destination="@id/FirstFirstFragment" />
    </fragment>
</navigation>